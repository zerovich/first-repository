<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taras.task_course.SingUpActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="25sp"
        android:id="@+id/etUserName"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="25sp"
        android:id="@+id/etPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etApartment"
        android:layout_alignLeft="@+id/etApartment"
        android:layout_alignStart="@+id/etApartment"
        android:layout_alignRight="@+id/etApartment"
        android:layout_alignEnd="@+id/etApartment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="25sp"
        android:id="@+id/etStreet"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etUserName"
        android:layout_alignLeft="@+id/etUserName"
        android:layout_alignStart="@+id/etUserName"
        android:layout_alignRight="@+id/etUserName"
        android:layout_alignEnd="@+id/etUserName"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="25sp"
        android:id="@+id/etHouse"
        android:layout_below="@+id/etStreet"
        android:layout_alignLeft="@+id/etStreet"
        android:layout_alignStart="@+id/etStreet"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/etApartment"
        android:layout_alignEnd="@+id/etApartment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="25sp"
        android:id="@+id/etApartment"
        android:layout_below="@+id/etHouse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зберегти"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:id="@+id/btn_save"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons_tools"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
